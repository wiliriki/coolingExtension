{
  "$schema": "https://cityjson.org/schema/cityjson-extension.json",
  "type": "CityJSONExtension",
  "name": "CoolingEnergyDemand",
  "uri": "https://example.org/cooling-energy-demand.json",
  "version": "0.1",
  "description": "Extension to store OTTV + ACM cooling load per BuildingRoom.",
  "extraAttributes": {
    "BuildingRoom": {
      "+CoolingEnergyDemand": {
        "type": "object",
        "properties": {
          "facade_area_m2": { "type": "number" },
          "ottv_per_m2": { "type": "number" },
          "ottv_total_w": { "type": "number" },
          "acm_w": { "type": "number" },
          "qheatload_total_w": { "type": "number" }
        }
      }
    }
  }
}
